{{>layout/compheader}}

<main class="comp_job_opening_write common_bg">
  <div class="container">
    <!-- container 건들지 말기 -->
    <!-- 여기서부터 시작 -->
    <div class="main_total">
      <div class="main_tit">
        <h2>공고등록</h2>
      </div>
      <form action="#">
        <div class="save_title mb-5">
          <input type="text" placeholder="제목을 입력해주세요" name="comp_job_opening_title" value="">
        </div>
        <div>
          <div class="main_back container">
            <div class="mb-2">
              <div>
                <label class="job_list mb-3" for="jobSkill">개발 직무</label>
              </div>
              <div>
                <div class="develop_job">
                  <div>
                    <input type="checkbox" id="backEnd" name="backEnd">
                    <label class="skill_btns1" for="backEnd">서버 백엔드 개발자</label>
                  </div>
                  <div>
                    <input type="checkbox" id="frontEnd" name="frontEnd">
                    <label class="skill_btns1" for="frontEnd">프론트 엔드 개발자</label>
                  </div>
                  <div>
                    <input type="checkbox" id="pullStack" name="pullStack">
                    <label class="skill_btns1" for="pullStack">웹 풀스택 개발자</label>
                  </div>
                  <div>
                    <input type="checkbox" id="iosDevelop" name="iosDevelop">
                    <label class="skill_btns1" for="iosDevelop">IOS 개발자</label>
                  </div>
                  <div>
                    <input type="checkbox" id="crossPlat" name="crossPlat">
                    <label class="skill_btns1" for="crossPlat">크로스 플랫폼 앱 개발자</label>
                  </div>
                  <div>
                    <input type="checkbox" id="andDevelop" name="andDevelop">
                    <label class="skill_btns1" for="andDevelop">안드로이드 개발자</label>
                  </div>
                </div>
                <div class="develop_job">
                </div>
              </div>
            </div>
            <div class="mb-4">
              <label class="job_list mt-2 mb-3" for="jobSkill">기술 스택(업무 툴/스킬)</label>
              <div class="parent_btn1">
                <div>
                  <input type="checkbox" id="Java" name="Java">
                  <label class="skill_btns1" for="Java">Java</label>
                </div>
                <div>
                  <input type="checkbox" id="JavaScript" name="JavaScript">
                  <label class="skill_btns1" for="JavaScript">JavaScript</label>
                </div>
                <div>
                  <input type="checkbox" id="Spring" name="Spring">
                  <label class="skill_btns1" for="Spring">Spring</label>
                </div>
                <div>
                  <input type="checkbox" id="HTML" name="HTML">
                  <label class="skill_btns1" for="HTML">HTML</label>
                </div>
                <div>
                  <input type="checkbox" id="JQuery" name="JQuery">
                  <label class="skill_btns1" for="JQuery">JQuery</label>
                </div>
              </div>
              <div class="parent_btn2">
                <div>
                  <input type="checkbox" id="MySQL" name="MySQL">
                  <label class="skill_btns1" for="MySQL">MySQL</label>
                </div>
                <div>
                  <input type="checkbox" id="React" name="React">
                  <label class="skill_btns1" for="React">React</label>
                </div>
                <div>
                  <input type="checkbox" id="JSP" name="JSP">
                  <label class="skill_btns1" for="JSP">JSP</label>
                </div>
                <div>
                  <input type="checkbox" id="Vue.js" name="Vue.js">
                  <label class="skill_btns1" for="Vue.js">Vue.js</label>
                </div>
                <div>
                  <input type="checkbox" id="Oracle" name="Oracle">
                  <label class="skill_btns1" for="Oracle">Oracle</label>
                </div>
              </div>
            </div>
            <div class="resume_margin">
              <!-- 자격요건 for 문-->
              <div class="plus_info">
                <label class="job_list mb-2" for="require">주요 업무</label>
                <button type="button" class="plus_button" onclick="addInput01()">
                  <img src="https://img.icons8.com/android/24/plus.png" alt="plus" />
                </button>
              </div>
              <input type="text" class="form-control" placeholder="주요 업무를 최대 5개까지 작성해주세요" id="mainJob">
              <div class="plus_Input1">
              </div>
            </div>
            <script>
              function addInput01() {
                let maxInputCount = 4; // 최대 엘리먼트 갯수
                let clickCount = 0; // 클릭 횟수
                if (clickCount >= 1) {
                  return;
                }
                let el = document.querySelector(".plus_Input1");
                let inputCount = el.querySelectorAll("input").length;
                if (inputCount >= maxInputCount) {
                  return;
                }
                let newEl = document.createElement("input");
                newEl.setAttribute("type", "text");
                newEl.setAttribute("class", "form-control");
                newEl.setAttribute("placeholder", "자격요건을 최대 5개까지 작성해주세요");
                el.appendChild(newEl);
                clickCount++; // 클릭 횟수 증가
              }
              function addInput02() {
                let maxInputCount = 4; // 최대 엘리먼트 갯수
                let clickCount = 0; // 클릭 횟수
                if (clickCount >= 1) {
                  return;
                }
                let el = document.querySelector(".plus_Input2");
                let inputCount = el.querySelectorAll("input").length;
                if (inputCount >= maxInputCount) {
                  return;
                }
                let newEl = document.createElement("input");
                newEl.setAttribute("type", "text");
                newEl.setAttribute("class", "form-control");
                newEl.setAttribute("placeholder", "자격요건을 최대 5개까지 작성해주세요");
                el.appendChild(newEl);
                clickCount++; // 클릭 횟수 증가
              }
            </script>
            <div class="resume_margin">
              <!-- 자격요건 for 문-->
              <div class="plus_info">
                <label class="job_list mb-2" for="require">자격 요건</label>
                <button type="button" class="plus_button" onclick="addInput02()">
                  <img src="https://img.icons8.com/android/24/plus.png" alt="plus" />
                </button>
              </div>
              <input type="text" class="form-control" placeholder="자격요건을 최대 5개까지 작성해주세요" id="mainJob">
              <div class="plus_Input2">
              </div>
            </div>
            <div class="mb-4">
              <label class="job_list mb-2" for="recruitOrder">채용 절차</label>
              <textarea name="recruitOrder" class="form-control" placeholder="채용절차를 간단히 작성해주세요" id="recruitOrder"
                cols="30" rows="2"></textarea>
            </div>
            <div class="mb-4">
              <label class="job_list" for="recruitOrder" id="">경력</label>
              <br>
              <input type="radio" id="new" name="career" value="new">
              <label for="new" class="on_btn">신입</label>
              <input type="radio" id="old" name="career" value="old">
              <label for="old" class="on_btn ">경력</label>
              <select class="select_answer">
                <option value="option1">1년차</option>
                <option value="option2">2년차</option>
                <option value="option3">3년차</option>
                <option value="option3">4년차</option>
                <option value="option3">5년차 이상</option>
              </select>
            </div>
            <div class="mb-4">
              <label class="job_list" for="recruitOrder" id="">학력</label>
              <br>
              <input type="radio" id="coll" name="edu" value="coll">
              <label for="coll" class="on_btn">대졸</label>
              <input type="radio" id="inv" name="edu" value="inv">
              <label for="inv" class="on_btn">초대졸</label>
              <input type="radio" id="high" name="edu" value="high">
              <label for="high" class="on_btn">고졸</label>
            </div>
            <div class="row mb-4">
              <div class="col-sm-4">
                <label class="job_list mb-2" for="endDate">마감일</label>
                <input type="date" class="form-control" id="endDate" name="endDate">
              </div>
              <div class="col-sm-8">
                <label class="job_list mb-2" for="location">근무지역</label>
                <input type="text" class="form-control" placeholder="근무지역을 넣어주세요" id="location" name="location">
              </div>
            </div>
            <div class="j_save">
              <button type="submit" class="btn btn-primary">저장하기</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>
</main>
