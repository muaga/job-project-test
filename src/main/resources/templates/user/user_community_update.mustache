{{>layout/userheader}}
<!--메인-->
<!-- 각자 페이지 name 작성-->
<main class="community_write common_bg">
  <div class="container mt-3">
    <!-- container 건들지 말기 -->
    <div class="user_community_write_gif">
      <h2>수정하기</h2>
      <br>
      <p>무엇이든 물어보세요!</p>
    </div>
    <div class="card">
      <div class="card-body">
        <form action="/user/community/board/{{community.id}}/update" method="post">
          <div class="mb-3">
            <input type="text" class="form-control" name="title" value="{{community.title}}" required maxlength="30">
          </div>
          <div class="mb-3">
            <textarea class="form-control" rows="10" name="content" id="content" required maxlength="300">{{community.content}}</textarea>
          </div>
          <button type="submit" class="btn btn-primary form-control">수정하기</button>
        </form>
      </div>
    </div>
  </div>

  </div>
</main>
